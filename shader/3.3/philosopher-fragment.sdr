#version 330

#define TYPE_PHILOSOPHER 1
#define TYPE_CHOPSTICK 2

out vec4 color;

flat in int type;

void main(void) {
  if (type == TYPE_PHILOSOPHER) {
    color = vec4(0.0, 0.8, 1.0, 1.0);
  } else if (type == TYPE_CHOPSTICK) {
    color = vec4(0.6, 0.2, 0.2, 1.0);
  } else {
    color = vec4(0.2, 0.2, 0.2, 1.0);
  }
}
